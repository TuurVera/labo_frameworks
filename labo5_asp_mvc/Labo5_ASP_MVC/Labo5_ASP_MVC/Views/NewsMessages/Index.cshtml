<div id="content" class="container clearfix">

    

    <section class="clearfix">
        <h2 class="structural">Laatste nieuwsberichten van de academie:</h2>
        <ul>
            @if (!(bool)ViewData["empty"])
            {

                @foreach(var item in Model)
                {

                    <li>
                        <h3>@Html.DisplayFor(modelItem => item.Title)</h3> 
                        @if(item.Id < 4)
                        {
                            <img src=@String.Format("/Content/news/{0}.jpg", item.Id) alt=@String.Format("newsmessage{00}", item.Id) width="300" height="135" />
                        }
                        else
                        {
                            <img src="/Content/news/default/dummy.jpg" alt=@String.Format("newsmessage{00}", item.Id) width="300" height="135" />
                        }
                        <p>|Toegevoegd op: @Html.DisplayFor(modelItem => item.Date)</p>
                        <br/>
                        <p>
                            @Html.DisplayFor(modelItem => item.Message)
                        </p>            
                        <a asp-action="Details"  asp-route-id="@item.Id" title="Lees meer over dit bericht" class="readmore">Lees meer over @Html.DisplayFor(modelItem => item.Title)</a>
                    </li>
                }
            }
            else
            {
                <li>
                    <p>
                        @ViewData["errorMessage"]
                    </p>

                </li>
            }
